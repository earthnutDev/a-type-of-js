{
  "name": "a-type-of-js",
  "type": "module",
  "private": true,
  "version": "1.0.7",
  "description": "JavaScript/TypeScript 的类型检测工具，支持 TypeScript 类型收缩",
  "scripts": {
    "b": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clean:package": "node scripts/clean-package-json.js",
    "build": "jja rm dist cls && pnpm run b && pnpm run clean:package",
    "diff": "jja pkg --diff",
    "push:version": "gvv",
    "push": "gvv",
    "eslint": "jja cls && eslint src",
    "beautify": "pnpm run prettier",
    "prettier": "jja cls && prettier . --write",
    "test": "lint-staged && jest --coverage",
    "report": "echo hello || cat ./coverage/lcov.info | coveralls",
    "coverage": "echo hello || codecov",
    "vjj": "vjj",
    "prepublishOnly": "pjj",
    "prepare": "husky"
  },
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,ts,tsx,jex,md,mdx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@qqi/check-version": "^1.0.3",
    "@qqi/rollup-external": "^1.0.8",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "a-node-tools": "^4.2.12",
    "color-pen": "^2.0.11",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^51.3.4",
    "globals": "^16.3.0",
    "gvv": "^0.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-junit": "^16.0.0",
    "jja": "^2.3.14",
    "lint-staged": "^16.1.2",
    "pjj": "^1.0.2",
    "prettier": "^3.6.2",
    "rollup": "^4.45.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vjj": "^1.0.7"
  }
}
